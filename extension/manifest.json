{
  "manifest_version": 3,
  "name": "Friction",
  "version": "0.1.0",
  "description": "Capture learning moments and generate delayed reports.",
  "action": {
    "default_title": "Friction",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://friction-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture-moment": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "Capture selected text as a moment"
    }
  }
}
